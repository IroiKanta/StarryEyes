    <!--  Window Backgrounds  -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource BaseColorBackground}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{DynamicResource BaseColorBackground}" />
    <SolidColorBrush x:Key="WhiteColorBrush" Color="{DynamicResource BaseColorBackground}" />
    <SolidColorBrush x:Key="BaseColorBackgroundBrush" Color="{DynamicResource BaseColorBackground}" />
    <SolidColorBrush x:Key="DisabledWhiteBrush" Color="{DynamicResource BaseColorBackground}" />
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{DynamicResource BaseColorBackground}" />
    <SolidColorBrush x:Key="GrayBrush10" Color="{DynamicResource BaseColorBackground}" />
    <SolidColorBrush x:Key="GrayBrush8" Color="{DynamicResource BaseColorBackground}" />
    <SolidColorBrush x:Key="GrayBrush7" Color="{DynamicResource BaseColorBackground}" />
    <SolidColorBrush x:Key="GrayBrush1" Color="{DynamicResource BaseColorForeground}" />

    <!--  Context Menus  -->
    <SolidColorBrush x:Key="RightArrowFill" Color="#FF222222" />
    <SolidColorBrush x:Key="CheckmarkFill" Color="#FF222222" />

    <!--  Common control foregrounds  -->
    <SolidColorBrush x:Key="BlackBrush" Color="{DynamicResource BaseColorForeground}" />
    <SolidColorBrush x:Key="BlackColorBrush" Color="{DynamicResource BaseColorForeground}" />
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource BaseColorForeground}" />
    <SolidColorBrush x:Key="LabelTextBrush" Color="{DynamicResource BaseColorForeground}" />
    <SolidColorBrush x:Key="CheckBoxBrush" Color="{DynamicResource BaseColorForeground}" />

    <!--  Window highlights  -->
    <SolidColorBrush x:Key="AccentColorBrush" Color="{DynamicResource GlobalKey}" />
    <SolidColorBrush x:Key="HighlightBrush" Color="{DynamicResource GlobalKey}" />
    <SolidColorBrush x:Key="WindowTitleColorBrush" Color="{DynamicResource TitleBarBackground}" />

    <!--  override WPF default values  -->
    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="{DynamicResource BaseColorBackground}" />
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="{DynamicResource BaseColorForeground}" />
</ResourceDictionary>